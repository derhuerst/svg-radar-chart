{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"es2022": true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"ignorePatterns": [
		"node_modules"
	],
	"rules": {
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "none",
				"ignoreRestSiblings": false
			}
		],
		"semi": ["error", "never"],
		"object-curly-spacing": ["error", "never"]
	}
}

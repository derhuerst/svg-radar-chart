{
	"name": "svg-radar-chart",
	"description": "A reusable radar chart in SVG.",
	"version": "0.2.0",
	"main": "dist/index.js",
	"module": "index.js",
	"files": [
		"index.js",
		"smoothing.js",
		"dist"
	],
	"keywords": [
		"svg",
		"radar",
		"chart",
		"dataviz",
		"visualization"
	],
	"author": "Jannis R <mail@jannisr.de>",
	"homepage": "http://derhuerst.github.io/svg-radar-chart/",
	"repository": "derhuerst/svg-radar-chart",
	"bugs": "https://github.com/derhuerst/svg-radar-chart/issues",
	"license": "ISC",
	"engines": {
		"node": ">=6"
	},
	"dependencies": {
		"d3-shape": "^1.0.3",
		"virtual-dom": "^2.1.1"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.0",
		"babel-preset-env": "^1.6.0",
		"babelify": "^8.0.0",
		"browserify": "^15.0.0",
		"safe-eval": "^0.3",
		"uglifyify": "^4.0.3",
		"virtual-dom-stringify": "^3.0.1"
	},
	"scripts": {
		"code-build": "babel --presets env -d dist index.js smoothing.js",
		"docs-build": "browserify -g [ babelify --presets env ] -g uglifyify docs/index.js > docs/bundle.min.js",
		"docs-dev": "browserify docs/index.js > docs/bundle.min.js",
		"build": "npm run code-build && npm run docs-build",
		"prepublishOnly": "npm run code-build"
	}
}
